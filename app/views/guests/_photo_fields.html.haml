- unless f.object.image.present?
  .nested-fields
    .row-fluid
      .span9
        = f.file_field :image, label: false, class: 'note-body span12'
      .span2
        = link_to_remove_association f do
          %button.btn
            %i.icon-trash

        = f.error :body, class: 'alert alert-error'
