#guests-index
  .guests-nav-tabs
    %ul.nav.nav-pills
      - if @q.present?
        %li
          = link_to guests_path do
            all
        %li.active
          = link_to guests_path do
            &times;
            = "results for '#{@q}'"
            %small (#{@guests.length})
      - else
        %li{ active_if(guests_path) }
          = link_to guests_path do
            all

  .row-fluid
    %table.table
      %thead
        %th name
        %th active lists/invitations
      - @guests.each do |guest|
        %tbody
          %tr
            %td
              %p
                .guest-name
                  = link_to guest do
                    = guest.full_name
                  - if can? :view_rating, guest
                    = stars(guest.rating)
                .thumbnail
                  = link_to guest do
                    = image_tag url_for_profile_pic(guest, :thumb), width: '100'

            %td.lists-and-invitations
              %span= render '/guest_lists/list_by_date', guest_lists: guest.guest_lists.active

