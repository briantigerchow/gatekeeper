= link_to new_guest_path do
  %button.btn.btn-primary
    create new guest

-# bootstrap update with fix row-hover issue. ignore for now
%table.table.table-borderless
  %caption
    %h1 all guests (#{Guest.all.length})

  - @guests.each_with_index do |guest, i|
    - if i.modulo(3) == 0
      %tr
    %td
      .guest-wrapper
        .row-fluid
          = link_to guest do
            .span6
              = image_tag url_for_profile_pic(guest, :thumb), width: '100'
            .span6
              %div
                = guest.full_name
                = "( #{guest.gender[0]} )"
              - if can? :view_ratings, Guest
                %div
                  = guest.rating

/         = link_to 'Show', guest, class: 'btn'
/         = link_to 'Edit', edit_guest_path(guest), class: 'btn'
/         = link_to 'Destroy', guest, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-danger'
