-if flash[:alert].present?
  .row-fluid
    .alert.fade.in.alert-warning#global-alert
      .close(data-dismiss='alert' href='#') &times;
      %h2
        = flash[:alert]

-if flash[:notice].present?
  .row-fluid
    .alert.fade.in.alert-info#global-alert
      .close(data-dismiss='alert' href='#') &times;
      %h3
        = flash[:notice]
