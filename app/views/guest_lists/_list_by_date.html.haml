- day = guest_lists[0].date << 1 if guest_lists.present?
- guest_lists.each do |list|
  - if day != list.date.day
    .row-fluid
      %h6= list.date.strftime('%A %e %B')
    - day = list.date.day
  .row-fluid
    = link_to guest_list_path(list) do
      #{list.owner.full_name}'s list
    - if can? :view_rating, list.owner
      = stars(list.owner.rating)
    %small= pluralize list.total, 'guest'
    - if list.pending?
      %span.label.label-warning pending

.guest-list-stats
  %span.list-count
    = n_lists = guest_lists.count
    - if n_lists == 1
      list
    - else
      lists
