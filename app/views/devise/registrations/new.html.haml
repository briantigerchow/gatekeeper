.row-fluid

  .span6.thumbnail
    = image_tag 'paintings.png'

  .span6
    .page-header
      %h1
        create a new account
        %small zen operations

    - # TODO validate email address format
    = simple_form_for(resource,
      :as => resource_name,
      :url => registration_path(resource_name)) do |f|
      = f.error_notification

      = f.input :email, :label => false do
        = f.input_field :email, autofocus: true, placeholder: 'email address'

      = f.input :password, :label => false do
        = f.input_field :password, placeholder: 'password'

      = f.input :password_confirmation, :label => false do
        = f.input_field :password_confirmation, placeholder: 'confirm password'

      = f.button :submit, "Sign up", :class => 'btn-success'

    = render "devise/shared/links"
