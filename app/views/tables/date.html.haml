= render 'tabs', table: nil

.row-fluid
  .span9
    .row-fluid
      .date-controls
        .pull-left
          = link_to date_tables_path(date: @date.prev_day), class: 'btn' do
            &larr;
            previous day
        .pull-right
          = link_to date_tables_path(date: @date.next_day), class: 'btn' do
            next day
            &rarr;

        .centered
          %form.form-search
            %a.btn{ href: date_tables_path(date: Nightclub.today) }
              today
            %input.search-query(type='text' name='date'){ placeholder: @date.try(:strftime, '%A %e %B') }
    .row-fluid
      = render 'tables', tables: @tables, date: @date

  .span3
    %span.label.label-info
      naming scheme
    %div
      0XX
      &rarr;
      VIP
    %div
      1XX
      &rarr;
      General
    %span.label.label-info
      reserving a table
    %div
      select
      %i.icon-plus
      %i.icon-book
      to create a new reservation for this table
